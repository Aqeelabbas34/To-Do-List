<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="40dp"
    android:background="@drawable/round_corner"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/noDateId"
           android:text="No Date"
           android:background="@drawable/text_view_bg"
           android:paddingStart="5dp"
           android:paddingEnd="5dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:layout_marginEnd="16dp"
           android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:id="@+id/todayTVId"
            android:layout_marginEnd="10dp"
            android:background="@drawable/text_view_bg"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrow"
            android:id="@+id/tomorrowTVId"
            android:layout_marginEnd="10dp"
            android:background="@drawable/text_view_bg"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextWeekTVId"
            android:text="Next Week"
            android:background="@drawable/text_view_bg"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey" />


        <CalendarView
            android:id="@+id/calender_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/calender_TV_ID" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="25dp"
        android:id="@+id/timePicker"
        android:elevation="4dp"
        app:cardBackgroundColor="#EEF4F4"
        app:cardCornerRadius="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/time_clock"
        android:layout_centerVertical="true"
        android:id="@+id/clock_icon"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_toRightOf="@id/clock_icon"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"/>

</RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/reminderView"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        app:cardBackgroundColor="#EEF4F4"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/reminder"
                android:layout_centerVertical="true"
                android:id="@+id/reminder_icon"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:layout_toRightOf="@id/reminder_icon"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/repeatTV"
        android:elevation="4dp"
        app:cardBackgroundColor="#EEF4F4"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/repeat"
                android:layout_centerVertical="true"
                android:id="@+id/repeat_icon"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat"
                android:layout_toRightOf="@id/repeat_icon"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="cancel"
            android:id="@+id/cancelBTN"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:backgroundTint="@null"
            android:backgroundTint="#EEF4F4"
            android:background="@drawable/save_btn_bg"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Save"
            android:id="@+id/saveBTn"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:backgroundTint="@null"
            android:background="@drawable/save_btn_bg"
            android:backgroundTint="@color/grey"
            android:layout_weight="1"/>

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>